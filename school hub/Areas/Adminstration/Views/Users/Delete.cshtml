@model school_hub.Models.User

@{
    ViewData["Title"] = "حذف المستخدم";
}

<h2>حذف المستخدم</h2>
<h3>هل أنت متأكد من أنك تريد حذف هذا المستخدم؟</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">معرّف المستخدم</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">اسم المستخدم</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">البريد الإلكتروني</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">نوع المستخدم</dt>
        <dd class="col-sm-10">@Model.UserType.GetDisplayName()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
