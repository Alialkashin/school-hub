@model school_hub.Models.LibrarySection

@{
    ViewData["Title"] = "Details";
}

<h1>تفاصيل القسم</h1>

<div class="mb-4">
    <h4>@Model.Name</h4>
    <hr />
    <div class="row mb-2">
        <label class="col-sm-2 fw-bold">الاسم:</label>
        <div class="col-sm-10">
            <span>@Model.Name</span>
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 fw-bold">الوصف:</label>
        <div class="col-sm-10">
            <span>@Model.Description</span>
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 fw-bold">الصورة:</label>
        <div class="col-sm-10">
            <img src="@Model.ImagePath" class="img-thumbnail" style="width: 120px; height: 100px;" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.SectionId" class="btn btn-primary">تعديل</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">عودة إلى القائمة</a>
</div>
