@model LibrarySection

<style>
    .book-card {
        position: relative;
        overflow: hidden;
        transition: transform 0.3s;
    }

    .book-card:hover {
        transform: translateY(-5px);
    }

    .book-description-hover {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: rgba(0, 123, 255, 0.9); /* لون أزرق شفاف */
        color: white;
        padding: 10px;
        transform: translateY(100%);
        transition: transform 0.3s ease;
        font-size: 14px;
    }

    .book-card:hover .book-description-hover {
        transform: translateY(0);
    }
</style>

<div class="container mt-4">
    <h2 class="text-center">@Model.Name</h2>
    <p class="text-center">@Model.Description</p>

    <div class="row mt-5">
        @if (Model.Books != null && Model.Books.Any())
        {
            @foreach (var book in Model.Books)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm book-card">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                        </div>

                        <!-- الوصف بيظهر عند تمرير الماوس -->
                        <div class="book-description-hover">
                            @book.Description
                        </div>

                        <div class="card-footer text-center">
                            <a href="@book.BookPath" class="btn btn-outline-light bg-primary" target="_blank">قراءة الكتاب</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">لا يوجد كتب حالياً في هذا القسم.</p>
        }
    </div>
</div>