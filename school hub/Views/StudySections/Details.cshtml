           
@model StudySection

@{
    ViewData["Title"] = "تفاصيل القسم";
}

<h2 class="mb-4">@Model.Name</h2>

@* <img src="@Model.ImagePath" class="img-fluid rounded mb-4" alt="صورة القسم" style="max-height: 300px;" /> *@

<@* h4>الخطط الدراسية:</h4> *@

<div class="row">
    @foreach (var plan in Model.StudyPlans)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@plan.Name</h5>
                    <p class="card-text">@plan.Description</p>
                         <img src="@plan.ImagePath" class="card-img-top"  />
                    <a asp-action="Details" asp-controller="StudyPlan" asp-route-id="@plan.StudySectionId" class="btn btn-primary">عرض التفاصيل</a>
                   

                </div>
            </div>
        </div>
    }
</div>