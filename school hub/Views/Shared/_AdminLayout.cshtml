<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -لوحة التحكم </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/school_hub.styles.css" asp-append-version="true" />
@*     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="~/fontawesome-free-6.7.2-web/css/all.min.css" />

</head>
<body>
    <div class="admin-container">
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <h4> منصة تعليمية</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="LibrarySections" asp-action="Index">
                        <i class="fas fa-book icon-orange"></i>  <em>اقسام المكتبة</em>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="StudyPlans" asp-action="Index">
                        <i class="fas fa-list-alt icon-blue"></i>  <em>خطط الدراسية</em>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="StudySections" asp-action="Index">
                        <i class="fas fa-school icon-green"></i>  <em>اقسام الدراسية</em>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Subjects" asp-action="Index">
                        <i class="fas fa-clipboard-list icon-purple"></i>  <em>المواد</em>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Units" asp-action="Index">
                        <i class="fas fa-puzzle-piece icon-red"></i>   <em>الواحدات</em>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="Index">
                        <i class="fas fa-users icon-gradient"></i>    <em>المستخدمين </em>
                    </a>
                </li>

            </ul>


        </nav>
    <main class="admin-main">
            @RenderBody()
    </main>

    </div>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
