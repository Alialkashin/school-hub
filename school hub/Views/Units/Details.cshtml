@model List<Unit>

@{
    ViewData["Title"] = "الوحدات";
}

<h2 class="text-center mb-4">وحدات المادة</h2>

<div class="container">
    @foreach (var unit in Model)
    {
        <div class="card mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h5 class="card-title m-0">@unit.Name</h5>

                <a asp-controller="Unit" asp-action="Details" asp-route-id="@unit.UnitId" class="btn btn-primary">
                    ذهاب إلى الوحدة
                </a>
            </div>
        </div>
    }